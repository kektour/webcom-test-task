$line=#ff8207;
$fbg=#28363d;
$sbg=#1e292f;
.footer {
    width: 100%;
    font-family MyriadPro-Regular;
    &__up_container {
        position: absolute;
        right: 9px;
        top: -66px;
        border: 3px solid $line;
        display: flex;
        border-radius: 10px;
        width: 60px;
        height: 60px;
    }
    &__up-button {
        display: flex;
        margin: auto;
        width: 100%;
        height: 100%;
    }
    &__up-button:hover {
        cursor: pointer;
    }
    &__up-image {
        background-image: url(../img/sprite-3.png);
        background-position: 0px 0px;
        width: 28px;
        height: 40px;
         margin: auto;
    }
    &__first {
        width: 100%;
        background: $fbg;
        position: relative
    }
    &__first:before {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        background: url(../img/footerbg.png) 100% 100% no-repeat;
        width: 100%;
        height: 100%;
        opacity: 0.4;
        z-index: 1;
    }
    &__seporator {
        background-image url(../img/sprite-1.png);
        background-position 0px -46px;
        width 31px;
        height 6px;
        margin 0 auto;
        margin-top: 45px;
        &--right {
            margin-right: 0;
        }
        &--left {
            margin-left: 0;
            margin-top: 16px
        }
    }
    &__wrapper {
        display: flex;
        margin: 0 auto;
        max-width: 1420px;
        padding: 0 10px;
        width: 100%;
        align-items: center;
        justify-content: space-between;
        height: 100%;
        flex-wrap: wrap;
        position: relative;
    }
    &__item {
        width: 229px;
        height: 250px;
        z-index: 2;
        overflow hidden;
        &-caption {
            font-family MyriadPro-Bold;
            color: #fff;
            font-size: 16px;
            margin: 0;
            letter-spacing: 1px;
            margin-top: 58px;
            &--mid {
                text-align: center;
            }
            &--right {
                text-align: right;
            }
        }
        &-text {
            color: #fff;
            font-size: 14px;
            margin: 0;
            margin-top: 17px;
            letter-spacing: 1px;
            &--l {
                text-align: left;
            }
            &--r {
                text-align: right;
                margin-left: 26px;
            }
        }
    }
    &__logo-link {
        display: block;
        margin-top: 60px;
        margin-left: 2px;
    }
    &__logo:hover {
        cursor pointer
    }
    &__links {
        display: flex;
        width: 140px;
        margin: 0 auto;
        justify-content: space-around;
        margin-top: 20px;
    }
    &__link {
        &--inst {
            background-image: url(../img/sprite-3.png);
            background-position: -28px 0px;
            width: 26px;
            height: 26px;
        }
        &--twitt {
            background-image: url(../img/sprite-3.png);
            background-position: -54px 0px;
            width: 26px;
            height: 22px;
        }
        &--faceb {
            background-image: url(../img/sprite-3.png);
            background-position: 0px -40px;
            width: 12px;
            height: 26px;
        }
    }
    &__second {
        height: 62px;
        border-bottom: 2px solid $line;
        background: $sbg;
        width: 100%;
        display: flex;
    }
    &__copyrights {
        margin: auto;
        font-size: 14px;
        color: #fff;
        letter-spacing: 3px;
    }
}


